@model Thiltw.Models.Book

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_MyLayout.cshtml";
}

<div class="row">
    <div class="col-lg-3">
        <img src="~/Images/@Model.Image" alt="Alternate Text" width="100%" />
    </div>
    <div class="col-lg-2"></div>
    <div class="col-lg-7">
        <h3>@Model.Name</h3>
        <p class="text-danger">@Model.Price VND</p>
    </div>
</div>
